[core]
  autocrlf = input
	safecrlf = warn
  editor = vim
  excludesfile = ~/.gitignore
[color]
  ui = auto
[alias]
  co = checkout
  ci = commit
  st = status
  br = branch
  dc = diff --cached
  amend = commit --amend
  hist = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  type = cat-file -t
  dump = cat-file -p
